{
    "$schema": "https://opencode.ai/config.json",
    "plugin": [
        "@franlol/opencode-md-table-formatter@0.0.3"
    ],
    "permission": {
        "bash": {
            "jira *": "ask",
            "jira help *": "allow",
            "jira * --help": "allow",
            "jira * -h": "allow",
            "jira me": "allow",
            "jira issue list *": "allow",
            "jira issue view *": "allow",
            "jira sprint list *": "allow",
            "jira epic list *": "allow",
            "jira board list *": "allow",
            "jira project list *": "allow",
            "jira open *": "allow",
            "gh *": "ask",
            "gh help *": "allow",
            "gh * --help": "allow",
            "gh * -h": "allow",
            "gh status": "allow",
            "gh status *": "allow",
            "gh * list": "allow",
            "gh * list *": "allow",
            "gh * view": "allow",
            "gh * view *": "allow",
            "gh * status": "allow",
            "gh * status *": "allow",
            "gh browse": "allow",
            "gh browse *": "allow",
            "gh search *": "allow",
        }
    }
}