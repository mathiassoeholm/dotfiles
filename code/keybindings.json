[
  {
    "key": "cmd+s",
    "command": "workbench.action.files.saveAll"
  },
  {
    "key": "ctrl+l",
    "when": "sideBarFocus",
    "command": "workbench.action.focusActiveEditorGroup"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+r",
    "command": "vscode-neovim.send",
    "args": ":redo<CR>"
  }
]
